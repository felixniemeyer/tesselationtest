#version 430

layout(triangles, fractional_odd_spacing, ccw) in;

in vec3 tcPosition[];
out vec3 tePosition;

uniform mat4 mvp;

void main()
{
	gl_Position = mvp * vec4(vec3(
		tcPosition[0].xyz * gl_TessCoord.x +
		tcPosition[1].xyz * gl_TessCoord.y +
		tcPosition[2].xyz * gl_TessCoord.z +
		1.0	),1);
}